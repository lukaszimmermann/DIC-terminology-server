# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Swagger - UI
GET            /                                                                     controllers.Assets.at(path="/public/swagger-ui", file="index.html")
#GET            /                          controllers.Default.redirect(to = "/index.html?/url=http://localhost:9000/api-docs")
# Swagger - API documentation
GET            /api-docs                                                             controllers.ApiHelpController.getResources
GET            /api-docs/bioportal                                                   controllers.ApiHelpController.getResource(path = "/bioportal")

# BioPortal search
GET            /bioportal/search                                                     controllers.TerminologyController.search(q: String, scope: String ?= "all", sources: String ?= "", page: Int ?= 1, pageSize: Int ?= 50)

### Provisional Classes ###

POST           /bioportal/classes/provisional                                        controllers.TerminologyController.createProvisionalClass()
GET            /bioportal/classes/provisional/:id                                    controllers.TerminologyController.findProvisionalClass(id: String)
GET            /bioportal/classes/provisional                                        controllers.TerminologyController.findAllProvisionalClasses(ontology: String ?= "")

### Provisional Relations ###

POST           /bioportal/relations/provisional                                      controllers.TerminologyController.createProvisionalRelation()
GET            /bioportal/relations/provisional/:id                                  controllers.TerminologyController.findProvisionalRelation(id: String)

### Provisional Value Sets ###
POST           /bioportal/value_sets/provisional                                     controllers.TerminologyController.createProvisionalValueSet()
GET            /bioportal/value_sets/provisional/:id                                 controllers.TerminologyController.findProvisionalValueSet(id: String)

### Value Sets ###
GET            /bioportal/vs_collections/:vs_collection/value_sets                   controllers.TerminologyController.findValueSetsByVsCollection(vs_collection : String)
GET            /bioportal/vs_collections/:vs_collection/value_sets/:vs/values        controllers.TerminologyController.findValuesByValueSet(vs: String, vs_collection: String)

### Provisional Values ###
POST           /bioportal/values/provisional                                         controllers.TerminologyController.createProvisionalValue()

## Other routes

# For CORS - preflight request
OPTIONS        /*all                                                                 controllers.Application.preflight(all)

## Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                                                         controllers.Assets.at(path="/public", file)

## Map relevant static resources from the /public/swagger-ui folder to /assets corresponding path - Swagger - UI
#GET            /css/*file                 controllers.Assets.at(path="/public/swagger-ui/css", file)
#GET            /images/*file              controllers.Assets.at(path="/public/swagger-ui/images", file)
#GET            /lib/*file                 controllers.Assets.at(path="/public/swagger-ui/lib", file)
#GET            /*file                     controllers.Assets.at(path="/public/swagger-ui", file)
GET            /*file                                                                controllers.Assets.at(path="/public/swagger-ui", file)

