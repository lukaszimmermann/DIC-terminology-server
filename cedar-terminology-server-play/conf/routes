# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Swagger - UI
GET            /                                                                     controllers.Assets.at(path="/public/swagger-ui", file="index.html")
#GET            /                          controllers.Default.redirect(to = "/index.html?/url=http://localhost:9000/api-docs")
# Swagger - API documentation
GET            /api-docs                                                             controllers.ApiHelpController.getResources
GET            /api-docs/bioportal                                                   controllers.ApiHelpController.getResource(path = "/bioportal")

# BioPortal search
GET            /bioportal/search                                                     controllers.TerminologyController.search(q: String, scope: String ?= "all", sources: String ?= "", page: Int ?= 1, page_size: Int ?= 50)

### Ontologies ###
GET            /bioportal/ontologies                                                 controllers.TerminologyController.findAllOntologies(include_details: Boolean ?= false)
GET            /bioportal/ontologies/:id                                             controllers.TerminologyController.findOntology(id: String, include_details: Boolean ?= false)
GET            /bioportal/ontologies/:ontology/classes/roots                         controllers.TerminologyController.getRootClasses(ontology: String)

### Classes ###
GET            /bioportal/ontologies/:ontology/classes/:id                           controllers.TerminologyController.findClass(id: String, ontology: String)
GET            /bioportal/ontologies/:ontology/classes/:id/tree                      controllers.TerminologyController.getClassTree(id: String, ontology: String)
GET            /bioportal/ontologies/:ontology/classes/:id/children                  controllers.TerminologyController.getClassChildren(id: String, ontology: String)
GET            /bioportal/ontologies/:ontology/classes/:id/parents                   controllers.TerminologyController.getClassParents(id: String, ontology: String)

### Provisional Classes ###
POST           /bioportal/classes/provisional                                        controllers.TerminologyController.createProvisionalClass()
GET            /bioportal/classes/provisional/:id                                    controllers.TerminologyController.findProvisionalClass(id: String)
GET            /bioportal/classes/provisional                                        controllers.TerminologyController.findAllProvisionalClasses(ontology: String ?= "")
PATCH          /bioportal/classes/provisional/:id                                    controllers.TerminologyController.updateProvisionalClass(id: String)
DELETE         /bioportal/classes/provisional/:id                                    controllers.TerminologyController.deleteProvisionalClass(id: String)

### Provisional Relations ###
POST           /bioportal/relations/provisional                                      controllers.TerminologyController.createProvisionalRelation()
GET            /bioportal/relations/provisional/:id                                  controllers.TerminologyController.findProvisionalRelation(id: String)
#PATCH          /bioportal/relations/provisional                                      controllers.TerminologyController.updateProvisionalRelation()
DELETE         /bioportal/relations/provisional/:id                                  controllers.TerminologyController.deleteProvisionalRelation(id: String)

### Provisional Value Sets ###
POST           /bioportal/value-sets/provisional                                     controllers.TerminologyController.createProvisionalValueSet()
GET            /bioportal/value-sets/provisional/:id                                 controllers.TerminologyController.findProvisionalValueSet(id: String)
PATCH          /bioportal/value-sets/provisional/:id                                 controllers.TerminologyController.updateProvisionalValueSet(id: String)
DELETE         /bioportal/value-sets/provisional/:id                                 controllers.TerminologyController.deleteProvisionalValueSet(id: String)

### Value Sets ###
GET            /bioportal/vs-collections                                             controllers.TerminologyController.findAllVSCollections(include_details: Boolean ?= false)
GET            /bioportal/vs-collections/:vs_collection/value-sets                   controllers.TerminologyController.findValueSetsByVsCollection(vs_collection : String)
GET            /bioportal/vs-collections/:vs_collection/value-sets/:vs/values        controllers.TerminologyController.findValuesByValueSet(vs: String, vs_collection: String)

### Provisional Values ###
POST           /bioportal/values/provisional                                         controllers.TerminologyController.createProvisionalValue()
GET            /bioportal/values/provisional/:id                                     controllers.TerminologyController.findProvisionalValue(id: String)
PATCH          /bioportal/values/provisional/:id                                     controllers.TerminologyController.updateProvisionalValue(id: String)
DELETE         /bioportal/values/provisional/:id                                     controllers.TerminologyController.deleteProvisionalValue(id: String)

## Other routes

# For CORS - preflight request
OPTIONS        /*all                                                                 controllers.Application.preflight(all)

## Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                                                         controllers.Assets.at(path="/public", file)

## Map relevant static resources from the /public/swagger-ui folder to /assets corresponding path - Swagger - UI
#GET            /css/*file                 controllers.Assets.at(path="/public/swagger-ui/css", file)
#GET            /images/*file              controllers.Assets.at(path="/public/swagger-ui/images", file)
#GET            /lib/*file                 controllers.Assets.at(path="/public/swagger-ui/lib", file)
#GET            /*file                     controllers.Assets.at(path="/public/swagger-ui", file)
GET            /*file                                                                controllers.Assets.at(path="/public/swagger-ui", file)

