# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Swagger - UI
GET            /                               controllers.Assets.at(path="/public/swagger-ui", file="index.html")
#GET            /                          controllers.Default.redirect(to = "/index.html?/url=http://localhost:9000/api-docs")
# Swagger - API documentation
GET            /api-docs                       controllers.ApiHelpController.getResources
GET            /api-docs/bioportal             controllers.ApiHelpController.getResource(path = "/bioportal")

# BioPortal search
GET            /bioportal/search               controllers.BioPortalController.search(q: String, scope: String ?= "all", sources: String ?= "", page: Int ?= 1, pageSize: Int ?= 50)
# BioPortal classes and provisional classes
POST           /bioportal/classes              controllers.BioPortalController.createClass
GET            /bioportal/classes/:id          controllers.BioPortalController.findClass(id: String)
GET            /bioportal/classes              controllers.BioPortalController.findAllProvisionalClasses(ontology: String ?= "")
# BioPortal relations
POST           /bioportal/relations            controllers.BioPortalController.createRelation
GET            /bioportal/relations/:id        controllers.BioPortalController.findRelation(id: String)
# BioPortal value sets
POST           /bioportal/value_sets           controllers.BioPortalController.createValueSet
GET            /bioportal/value_sets           controllers.BioPortalController.findValueSetsByVsCollection(valueSetCollection : String ?= "")

## Other routes

# For CORS - preflight request
OPTIONS        /*all                           controllers.Application.preflight(all)

## Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                   controllers.Assets.at(path="/public", file)

## Map relevant static resources from the /public/swagger-ui folder to /assets corresponding path - Swagger - UI
#GET            /css/*file                 controllers.Assets.at(path="/public/swagger-ui/css", file)
#GET            /images/*file              controllers.Assets.at(path="/public/swagger-ui/images", file)
#GET            /lib/*file                 controllers.Assets.at(path="/public/swagger-ui/lib", file)
#GET            /*file                     controllers.Assets.at(path="/public/swagger-ui", file)
GET            /*file                          controllers.Assets.at(path="/public/swagger-ui", file)

